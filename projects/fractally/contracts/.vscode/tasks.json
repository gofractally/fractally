{
    "version": "2.0.0",
    "tasks": [
      // Compilation
      {
        "label": "make",
        "type": "shell",
        "command": "cd build && cmake `clsdk-cmake-args` .. && make -j $(nproc)",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "options": {
            "statusbar": {
                "label" : "$(diff-insert) Build",
                "tooltip": "CMake build"
            }
        }
      },
      {
        "label": "test_fractally",
        "type": "shell",
        "command": "cd build && cltester artifacts/fractally-debug/test-fractally.wasm -s",
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "options": {
            "statusbar": {
                "label" : "$(diff-insert) Test fractally",
                "tooltip": "Invoke Cltester"
            }
        }
      },
    ]
  }
  